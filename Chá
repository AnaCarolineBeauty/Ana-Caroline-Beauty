<script>
  document.getElementById('formulario').addEventListener('submit', function(e){
    e.preventDefault();
    const nome = document.getElementById('nome').value;
    const rsvp = document.getElementById('rsvp').value;
    const mensagem = document.getElementById('mensagem').value;
    const checkboxes = document.querySelectorAll('.presentes input[type="checkbox"]:checked');
    const presentesSelecionados = Array.from(checkboxes).map(cb => cb.value);

    alert(
      `Obrigado pela confirma√ß√£o, ${nome}!\nRSVP: ${rsvp}\nPresentes selecionados: ${presentesSelecionados.join(', ')}\nMensagem: ${mensagem}`
    );

    // Limpa formul√°rio
    document.getElementById('formulario').reset();
    checkboxes.forEach(cb => cb.checked = false);
  });
</script>
